@import url('https://fonts.googleapis.com/css?family=Source+Code+Pro:400,200,700')
@import url('https://fonts.googleapis.com/css?family=Tangerine')
@import url('https://fonts.googleapis.com/css?family=Abel')
@import url('https://fonts.googleapis.com/css?family=Bad+Script')
@import url('https://fonts.googleapis.com/css?family=Parisienne')

*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family 'Abel', monospace

.header
  background url('https://images.unsplash.com/photo-1451337516015-6b6e9a44a8a3?crop=entropy&fit=crop&fm=jpg&h=975&ixjsv=2.1.0&ixlib=rb-0.3.5&q=80&w=1925')
  background-position center

  .page-title
    font-weight 200
    font-size 80px
    text-align center
    padding 100px
    padding-bottom 10px
    text-transform uppercase
    color #fff

  .sub-title
    font-family 'Parisienne', cursive
    font-weight 200
    font-size 50px
    text-align center
    padding 10px
    color #fff

.invitation
  text-align center

.nav
  background #000
  text-align center

  li
    display inline-block

  a
    font-size 2.50em
    display inline-block
    padding 20px
    color #fff
    text-decoration none

    &:hover
      background-color #3AB795
      text-decoration underline

.main-content
  margin 50px auto
  font-size 1.25em

  @media (min-device-width: 420px)
    max-width 700px

  p
    line-height 1.6
    margin-bottom 1.7em

img
  max-width 100%

.footer
  margin 50px auto
  max-width 600px
  border-top 1px solid #444
  padding 20px 0

  p
    color #444
    font-size 12px
